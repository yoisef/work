<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layoutDirection="ltr"
    android:id="@+id/myrow"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/background"
        android:paddingLeft="4dp"
        android:layoutDirection="ltr"
        android:background="@color/blood"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="30dp"
            android:id="@+id/xsign"
            android:src="@drawable/xsign"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Delete Item ?"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/xsign"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:padding="3dp"
            android:textStyle="bold"
            android:id="@+id/deleterow"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/blood"
            android:background="@color/white"
            android:text="Yes ,Delete"
            android:layout_centerVertical="true"

            android:layout_height="50dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layoutDirection="ltr"
        android:id="@+id/foregoroundd"
        android:orientation="vertical"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="4">
        <RelativeLayout
            android:id="@+id/productdetails"
            android:padding="7dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="horizontal" android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_margin="5dp"
                android:src="@drawable/lipton"
                android:id="@+id/productimg"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_height="40dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/layoutt"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/nameproduct"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="lipton"
                    android:textSize="22sp"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/layoutlin"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="22sp"
                        android:textColor="@color/gray"
                        android:text="#"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="22sp"
                        android:id="@+id/numberproduct"
                        android:textColor="@color/gray"
                        android:text="776875765"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/itempricee"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="2"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="20dp"
                android:layout_toLeftOf="@id/itempricee"
                android:background="@drawable/dollar"
                android:layout_centerVertical="true"
                android:layout_height="20dp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:padding="15dp"
            android:background="@color/white"
            android:src="@drawable/rubbishbin"
            android:id="@+id/remove"
            android:layout_gravity="center"
            android:layout_height="match_parent" />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/gray"
            android:layout_weight=".07"/>
    </LinearLayout>






</com.daimajia.swipe.SwipeLayout>


